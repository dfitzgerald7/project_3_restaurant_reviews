<!DOCTYPE html>
<html>
  <head>
    <title>Project3RestaurantReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="indigo darken-4">
      <div class="nav-wrapper">
        <a href="#" class="brand-logo left">RESTaurants</a>
        <ul class="right hide-on-med-and-down">
        <% if logged_in? %>
          <li> <%= link_to "Logout", logout_path %> </li>
          <li> <%= link_to "Find a restaurant near you!", restaurants_path %> </li>
        <% else %>
          <li> <%= link_to "Sign Up", new_user_path %> </li>
          <li> <%= link_to "Log In", login_path %> </li>
          <li> <%= link_to('Log in with Github!', '/auth/github') %> </li>
        <%end%>
        <li> <%= link_to "Homepage", root_path %> </li>
        </ul>
      </div>
    </nav>
    <%= flash[:message] %>
    <div class="container"> <%= yield %> </div>
  </body>
</html>
