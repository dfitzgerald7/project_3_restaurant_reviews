
<h1 class="center"> Welcome to RESTaurants! </h1>
<h3 class="center"> Timeline of recent reviews<%=@user ? " for #{@user.username}" : ""%>:</h3>
<ul>

<% @reviews.each do |review| %>
  <p> <%=link_to review.user.username, user_reviews_path(review.user)%>: </p>
  <div class="row">
    <li class="col s9 push-s1"> Restaurant: <%= link_to review.restaurant.name, restaurant_path(review.restaurant)%> <br>
    Rating: <%= review.rating %> stars <br>
    Review: <%= review.content %> </li>
  </div>
  <br>
<% end %>
</ul>

<% if logged_in? %>
  <%= link_to "Have you eaten anywhere recently? Add a review!", new_review_path %>
<% else %>
  <p> Sign up or Log in to leave a review </p>
<% end %>
